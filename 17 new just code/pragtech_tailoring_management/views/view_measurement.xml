<odoo>
    <data>
        <!-- ********************************* Action ********************************************* -->
        <record id="tailor_measurment_action" model="ir.actions.act_window">
            <field name="name">Measurments</field>
            <field name="res_model">tailoring.measurement</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- ********************************* Tree View ************************************************** -->
        <record id="tailor_measurment_tree" model="ir.ui.view">
            <field name="name">Tailor_Measurments_tree</field>
            <field name="model">tailoring.measurement</field>
            <field name="arch" type="xml">
                <tree string="Measurments">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- ********************************* Form View ************************************************* -->
        <record id="tailor_measurment_form" model="ir.ui.view">
            <field name="name">Tailor_Measurments.form</field>
            <field name="model">tailoring.measurement</field>
            <field name="arch" type="xml">
                <form string="Measurments">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ********************************* Search View ************************************************* -->
        <record id="tailor_measurment_search" model="ir.ui.view">
            <field name="name">Tailor_Measurments.search</field>
            <field name="model">tailoring.measurement</field>
            <field name="arch" type="xml">
                <search string="Measurments">
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</odoo>