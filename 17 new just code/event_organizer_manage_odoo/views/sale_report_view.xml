<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_inherit_event_custom" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']"  position="after">
            <div class="row mt32 mb32" id="sale_event_custom">
                <div t-if="doc.event_custom_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>Event:</strong>
                    <p class="m-0" t-field="doc.event_custom_id"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
