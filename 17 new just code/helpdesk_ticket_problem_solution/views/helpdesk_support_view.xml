<odoo>
    <data>

        <record id="helpdesk_support_ticket_solution_form" model="ir.ui.view">
            <field name="name">helpdesk.support.form.view</field>
            <field name="model">helpdesk.support</field>
            <field name="inherit_id" ref="website_helpdesk_support_ticket.helpdesk_support_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page name="ticket solution" string="Solution">
                        <field name="ticket_solution" widget="html"/>
                        <group>
                            <group>
                                <field name="image1" widget="image"  class="oe_avatar"/>
                                <field name="image2" widget="image" class="oe_avatar"/>
                                <field name="image3" widget="image" class="oe_avatar"/>
                                <field name="image4" widget="image" class="oe_avatar"/>
                                <field name="image5" widget="image" class="oe_avatar"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
