<templates xml:space="preserve">

    <t t-inherit="mail.Message" t-inherit-mode="extension">
        <xpath expr="//t[@t-elif='message.body']" position="after">
            <div class="odoo-chat-loader d-none">
                <span class="chat-loader-span">
                    <span class="chat-loader" style="animation-delay: 200ms;"></span>
                    <span class="chat-loader" style="animation-delay: 300ms;"></span>
                    <span class="chat-loader" style="animation-delay: 400ms;"></span>
                    <span class="chat-loader" style="animation-delay: 500ms;"></span>
                    <span class="chat-loader" style="animation-delay: 600ms;"></span>
                </span>
            </div>
        </xpath>
    </t>


</templates>
