<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
                       
        <record id="view_quality_tag_tree" model="ir.ui.view">
                <field name="name">Project Quality Tags Tree View</field>
                <field name="model">project.quality.tag</field>
                <field name="arch" type="xml">
                    <tree editable='bottom'>
                        <field name='name'/>
                    </tree>
                </field>
        </record>

        <record id="view_quality_tag_search" model="ir.ui.view">
                <field name="name">Project Quality Tags Search View</field>
                <field name="model">project.quality.tag</field>
                <field name="arch" type="xml">
                    <search>
                        <field name='name'/>
                    </search>
                </field>
        </record>

        <record model="ir.actions.act_window" id="action_quality_tag">
            <field name="name">Quality Tags</field>
            <field name="res_model">project.quality.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
