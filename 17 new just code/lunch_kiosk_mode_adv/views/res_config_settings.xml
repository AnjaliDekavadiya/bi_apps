<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>	
  		<record id="res_config_settings_view_form_lunch" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.lunch.kiosk</field>
            <field name="model">res.config.settings</field>
			<field name="inherit_id" ref="lunch.res_config_settings_view_form"/>			
			<field name="arch" type="xml">	
                <block name="lunch_notification_setting_container" position="after">
                    <block title="Kiosk Mode Control" id="lunch_face_recognition">
                        <div id="lunch_face_recognition" class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="lunch_face_recognition"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="lunch_face_recognition" string="Face Recognition"/>
                                <div class="text-muted">
                                    Enable to Check Face Recognition while using the kiosk mode
                                </div>
                            </div>
                        </div>
                    </block>
                </block>											
			</field>
		</record>
	</data>		
</odoo>