<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_croping_air_temperature_form" model="ir.ui.view">
            <field name="name">Crops Air Temperature View</field>
            <field name="model">farmer.cropping.air.temperature</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='name'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
                       
        <record id="view_croping_air_temperature_tree" model="ir.ui.view">
                <field name="name">Crops Air Temperature Tree View</field>
                <field name="model">farmer.cropping.air.temperature</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name='name'/>
                    </tree>
                </field>
        </record>

        <record id="view_croping_air_temperature_search" model="ir.ui.view">
                <field name="name">Crops Air Temperature Search View</field>
                <field name="model">farmer.cropping.air.temperature</field>
                <field name="arch" type="xml">
                    <search>
                        <field name='name'/>
                    </search>
                </field>
        </record>

        <record model="ir.actions.act_window" id="action_air_temperature">
            <field name="name">Air Temperatures</field>
            <field name="res_model">farmer.cropping.air.temperature</field>
            <!-- <field name="view_type">form</field> --> <!-- odoo13 -->
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>


