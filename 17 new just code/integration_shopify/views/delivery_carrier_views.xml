<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_shopify_form" model="ir.ui.view">
        <field name="name">delivery.carrier.shopify.form.view</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='delivery_details']/field[@name='product_id']/." position="after">
                <field name="shopify_code"/>
            </xpath>
        </field>
    </record>

</odoo>
