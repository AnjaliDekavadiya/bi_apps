            <field name="name">whatsapp.template.form</field>
            <field name="model">whatsapp.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="header" widget="html"/>
                            <field name="body" widget="html"/>
                            <field name="footer" widget="html"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

