<odoo>
    <record id="view_whatsapp_settings_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.whatsapp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="WhatsApp Marketing"
                    string="WhatsApp Marketing" data-key="dr_whatsapp_marketing">
                    <h2>WhatsApp Marketing</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="row">
                            <span class="o_form_label">WhatsApp Access Token</span>
                            <div class="text-muted content-group mt16">
                                <field name="whatsapp_access_token" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="row">
                            <span class="o_form_label">WhatsApp Phone Number ID</span>
                            <div class="text-muted content-group mt16">
                                <field name="whatsapp_phone_id" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="row">
                            <span class="o_form_label">WhatsApp Business ID</span>
                            <div class="text-muted content-group mt16">
                                <field name="whatsapp_business_id" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="row">
                            <span class="o_form_label">WhatsApp Verify Token</span>
                            <div class="text-muted content-group mt16">
                                <field name="whatsapp_verify_token" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>