<odoo>
    <data>

        <record id="view_helpdesk_search_question_wizard_form" model="ir.ui.view">
            <field name="name">helpdesk.search.question.wizard.form</field>
            <field name="model">helpdesk.search.question.wizard</field>
            <field name="arch" type="xml">
                <form string="Search for Questions and Answers in Knowledge Base" >
                    <p >Search for Questions and Answers in Knowledge Base. After copy URL from knowledge base you can send to customer.</p>
                    <group string="Knowledge Base">
                        <!-- <field name="ticket_faq_ids" nolabel="1"/> -->
                        <field name="ticket_faq_ids" nolabel="1" colspan="2"/>
                    </group>
                <footer>
                <button string="Ok" class="oe_highlight" special="cancel" />
                </footer>
                </form>
            </field>
        </record>
        <record id="action_helpdesk_search_question_wizard" model="ir.actions.act_window">
            <field name="name">Search for Questions and Answers in Knowledge Base</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">helpdesk.search.question.wizard</field>
<!--            <field name="view_type">form</field> odoo13-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

   </data>
 <!-- </openerp> -->
</odoo>
