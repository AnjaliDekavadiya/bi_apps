<?xml version="1.0"?>
<odoo>

        <record model="ir.ui.view" id="view_ticket_faq_tags_form">
            <field name="name">view.ticket.faq.tags.form</field>
            <field name="model">ticket.faq.tags</field>
            <field name="arch" type="xml">
                <form string="Knowledge Base Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_ticket_faq_tags_tree" model="ir.ui.view">
            <field name="name">view.ticket.faq.tags.tree</field>
            <field name="model">ticket.faq.tags</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree  string="Knowledge Base Tags">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="view_ticket_faq_tags_search" model="ir.ui.view">
            <field name="name">view.ticket.faq.tags.search</field>
            <field name="model">ticket.faq.tags</field>
            <field name="arch" type="xml">
                <search  string="Knowledge Base Tags">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_view_ticket_faq_tags" model="ir.actions.act_window">
            <field name="name">Knowledge Base Tags</field>
            <field name="res_model">ticket.faq.tags</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                </p>
            </field>
        </record>

</odoo>