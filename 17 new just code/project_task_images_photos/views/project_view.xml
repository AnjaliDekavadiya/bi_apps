<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
       <record id="view_task_form2_inherit_custom_image" model="ir.ui.view">
            <field name="name">project.task.form.inherit.custom.image</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
              <xpath expr="//notebook" position="inside">
                  <page name="Images" string="Images">
                    <group>
                      <group>
                           <field name="task_image1_custom" widget='image' class="oe_avatar"/>
                           <field name="task_image2_custom" widget='image' class="oe_avatar"/>
                           <field name="task_image3_custom" widget='image' class="oe_avatar"/>
                      </group>
                      <group>
                           <field name="task_image4_custom" widget='image' class="oe_avatar"/>
                           <field name="task_image5_custom" widget='image' class="oe_avatar"/>
                           <field name="task_image6_custom" widget='image' class="oe_avatar"/>
                      </group>
                    </group>
                  </page>
               </xpath>
            </field>
        </record>

    </data>
</odoo>

