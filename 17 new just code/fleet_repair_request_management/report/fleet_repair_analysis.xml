<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_repair_user_tree" model="ir.actions.act_window">
        <field name="name">Repair Analysis</field>
        <field name="res_model">repair.report</field>
<!--        <field name="view_type">form</field> odoo13-->
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="fleet_repair_request_management.fleet_request_search_view"/>
        <field name="help">This report allows you to analyse the performance of your projects and users. You can analyse the quantities of tasks, the hours spent compared to the planned hours, the average number of days to open or close a task, etc.</field>
    </record>
    
    <!-- Reporting menus -->

    <menuitem id="menu_repair_analysis"
        name="Repair Analysis"
        action="action_repair_user_tree"
        parent="menu_repair_report"
        />

</odoo>
