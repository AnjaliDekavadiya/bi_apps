        <record id="email_notification_ticket_repaired_unrepairable" model="mail.template"><field name="name">Email Notification for ticket</field><field name="email_from">service-center@procom-me.com</field><field name="email_to">${ctx.get('email_to')}</field><field name="email_cc">${ctx.get('email_cc')}</field><field name="subject"> Procom Service Center â€“ Ticket # ${object.name} - ${ctx.get('status')}</field><field name="model_id" ref="jt_service_management.model_crm_claim" /><field name="auto_delete" eval="True" /><field name="lang">${object.partner_id.lang}</field><field name="body_html">
